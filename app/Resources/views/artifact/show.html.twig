{% extends 'base.html.twig' %}

{% block body %}
    <h1>Artifact</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artifact.id }}</td>
            </tr>
            <tr>
                <th>Inventorynumber</th>
                <td>{{ artifact.inventoryNumber }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('artifact_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('artifact_edit', { 'id': artifact.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
