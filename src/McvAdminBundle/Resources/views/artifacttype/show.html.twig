{% extends "McvAdminBundle:layout:admin.layout.html.twig" %}

{% block body %}
    <h1>Artifacttype</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artifactType.id }}</td>
            </tr>
            <tr>
                <th>Typename</th>
                <td>{{ artifactType.typeName }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('artifact-type_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('artifact-type_edit', { 'id': artifactType.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
